{
  "name": "@heroku/react-hk-components",
  "version": "1.2.0",
  "description": "React components for Heroku",
  "main": "dist/index.js",
  "repository": "https://github.com/heroku/react-hk-components.git",
  "author": "Idan Gazit <idan@heroku.com>",
  "license": "SEE LICENSE IN LICENSE",
  "dependencies": {
    "@heroku/react-malibu": "3.2.0",
    "@types/storybook__addon-actions": "^3.0.1",
    "classnames": "^2.2.6",
    "d3": "^5.4.0",
    "lodash": "4.17.5",
    "moment": "2.21.0",
    "prop-types": "15.x",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-measure": "^2.0.0",
    "react-popper": "^1.0.2",
    "react-table": "^6.8.6",
    "react-transition-group": "^2.4.0",
    "simple-react-modal": "0.5.1"
  },
  "devDependencies": {
    "@storybook/addon-storyshots": "^3.3.11",
    "@storybook/react": "^3.3.10",
    "@types/classnames": "^2.2.4",
    "@types/enzyme": "^3.1.6",
    "@types/enzyme-adapter-react-15": "^1.0.1",
    "@types/jest": "^22.1.1",
    "@types/prop-types": "^15.5.2",
    "@types/react": "^16.4.6",
    "@types/react-dom": "^16.0.6",
    "@types/react-test-renderer": "^16.0.0",
    "@types/react-transition-group": "^2.0.11",
    "@types/storybook__react": "^3.0.6",
    "awesome-typescript-loader": "^3.4.1",
    "babel-core": "^6.26.0",
    "babel-plugin-react-hot-loader": "^3.0.0-beta.6",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "^3.3.0",
    "eslint": "^4.15.0",
    "eslint-config-standard": "^11.0.0-beta.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-node": "^5.2.1",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-react": "^7.5.1",
    "eslint-plugin-standard": "^3.0.1",
    "file-loader": "^1.1.11",
    "jest": "^22.1.4",
    "jest-css-modules-transform": "^2.1.1",
    "np": "^2.19.0",
    "react-hot-loader": "^4.3.1",
    "react-test-renderer": "16",
    "ts-jest": "^22.0.1",
    "tslint": "^5.9.1",
    "tslint-config-standard": "^7.0.0",
    "tslint-react": "^3.4.0",
    "typescript": "2.x"
  },
  "scripts": {
    "eslint": "eslint ./src",
    "tslint": "tslint -c tslint.json --project .",
    "lint": "yarn run eslint && yarn run tslint",
    "storybook": "start-storybook -p ${PORT:-9001} -s ./src/static -c .storybook",
    "build": "rm -rf ./dist; tsc --project tsconfig.build.json; yarn staticfiles",
    "prepublish": "yarn run build",
    "test": "jest --testPathPattern $PWD/test",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "release": "np",
    "staticfiles": "cp -r src/static dist/static"
  },
  "jest": {
    "transform": {
      "^.+\\.[tj]sx?$": "ts-jest",
      ".+\\.(css)$": "<rootDir>/node_modules/jest-css-modules-transform"
    },
    "setupFiles": [
      "<rootDir>/test/test-setup.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.[jt]sx?$",
    "testURL": "http://localhost/",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  }
}
