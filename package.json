{
  "name": "@heroku/react-hk-components",
  "version": "2.12.0",
  "description": "React components for Heroku",
  "main": "dist/umd/react-hk-components.js",
  "repository": "https://github.com/heroku/react-hk-components.git",
  "author": "Heroku",
  "license": "SEE LICENSE IN LICENSE",
  "engines": {
    "node": "16.x"
  },
  "dependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@babel/preset-react": "^7.22.0",
    "@heroku/react-malibu": "^4.1.0",
    "@types/jest": "^29.5.0",
    "@types/lodash": "^4.17.20",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@types/react-test-renderer": "^18.0.0",
    "@types/react-transition-group": "^4.4.5",
    "babel-jest": "^29.7.0",
    "babel-loader": "^9.1.0",
    "babel-plugin-require-context-hook": "^1.0.0",
    "classnames": "^2.3.2",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^5.2.7",
    "d3": "^7.9.0",
    "date-fns": "^1.30.1",
    "lodash": "^4.17.21",
    "mini-css-extract-plugin": "^2.7.6",
    "react-inlinesvg": "^0.8.3",
    "react-measure": "^2.0.0",
    "react-outside-click-handler": "^1.2.2",
    "react-table": "^6.8.6",
    "react-transition-group": "^4.4.5",
    "regenerator-runtime": "^0.12.1",
    "simple-react-modal": "0.5.1",
    "style-loader": "3.3.4",
    "terser-webpack-plugin": "^5.3.9",
    "ts-loader": "^9.4.4"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-react": "^7.5.1",
    "file-loader": "^6.2.0",
    "husky": "^1.2.0",
    "jest": "^29.7.0",
    "jest-css-modules-transform": "4.4.2",
    "lint-staged": "^13.3.0",
    "np": "7.7.0",
    "prettier": "^3.4.0",
    "react-test-renderer": "^18.2.0",
    "ts-jest": "^29.1.0",
    "typescript": "^4.9.5",
    "webpack": "^5.101.3",
    "webpack-bundle-analyzer": "4.10.2",
    "webpack-cli": "^5.1.4"
  },
  "scripts": {
    "analyze": "rm -f stats.json && npx webpack --profile --json > stats.json && npx webpack-bundle-analyzer stats.json",
    "eslint": "eslint \"src/**/*.{ts,tsx}\"",
    "lint": "yarn run eslint",
    "build": "yarn run clean && tsc --project tsconfig.build.json && webpack",
    "clean": "rm -rf ./dist",
    "prepublish": "yarn run build",
    "test": "jest --testPathPattern $PWD/test/helpers.test.tsx",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "release": "np"
  },
  "jest": {
    "transform": {
      "^.+\\.[t]sx?$": [
        "ts-jest",
        {
          "tsconfig": "tsconfig.json"
        }
      ],
      "\\.jsx?$": "babel-jest",
      ".+\\.(css)$": "<rootDir>/node_modules/jest-css-modules-transform"
    },
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/"
    ],
    "moduleNameMapper": {
      "^d3-array$": "<rootDir>/node_modules/d3-array/dist/d3-array.js",
      "^d3-scale$": "<rootDir>/node_modules/d3-scale/dist/d3-scale.js",
      "^d3-shape$": "<rootDir>/node_modules/d3-shape/dist/d3-shape.js"
    },
    "setupFiles": [
      "<rootDir>/test/test-setup.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.[jt]sx?$",
    "testEnvironmentOptions": {
      "url": "http://localhost/"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "jsxSingleQuote": true,
    "trailingComma": "es5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
