{
  "name": "@heroku/react-hk-components",
  "version": "2.12.0",
  "description": "React components for Heroku",
  "main": "dist/umd/react-hk-components.js",
  "repository": "https://github.com/heroku/react-hk-components.git",
  "author": "Heroku",
  "license": "SEE LICENSE IN LICENSE",
  "engines": {
    "node": "16.x"
  },
  "dependencies": {
    "@heroku/react-malibu": "^4.1.0",
    "@popperjs/core": "^2.11.8",
    "@types/jest": "^27.5.2",
    "@types/lodash": "^4.17.20",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@types/react-test-renderer": "^18.0.0",
    "@types/react-transition-group": "^4.4.5",
    "babel-core": "^6.26.3",
    "babel-jest": "^23.6.0",
    "babel-loader": "7",
    "babel-plugin-require-context-hook": "^1.0.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-1": "^6.24.1",
    "classnames": "^2.3.2",
    "copy-webpack-plugin": "^4.6.0",
    "css-loader": "^1.0.1",
    "d3": "^5.4.0",
    "date-fns": "^1.30.1",
    "lodash": "^4.17.21",
    "mini-css-extract-plugin": "^0.4.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hot-loader": "^4.3.1",
    "react-inlinesvg": "^0.8.3",
    "react-measure": "^2.0.0",
    "react-outside-click-handler": "^1.2.2",
    "react-popper": "2.3.0",
    "react-select": "^2.1.2",
    "react-table": "^6.8.6",
    "react-transition-group": "^4.4.5",
    "regenerator-runtime": "^0.12.1",
    "simple-react-modal": "0.5.1",
    "style-loader": "^0.23.1",
    "ts-loader": "^8.4.0",
    "uglifyjs-webpack-plugin": "^2.0.1"
  },
  "devDependencies": {
    "eslint": "^4.15.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-node": "^5.2.1",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-react": "^7.5.1",
    "file-loader": "^1.1.11",
    "husky": "^1.2.0",
    "jest": "^27.5.1",
    "jest-css-modules-transform": "^2.1.1",
    "lint-staged": "^8.1.0",
    "np": "^2.19.0",
    "prettier": "1.15.3",
    "react-test-renderer": "^18.2.0",
    "ts-jest": "^27.1.5",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.17.0",
    "tslint-react": "^3.4.0",
    "typescript": "^4.9.5",
    "webpack": "^4.25.1",
    "webpack-bundle-analyzer": "^3.0.3",
    "webpack-cli": "^3.1.2"
  },
  "scripts": {
    "analyze": "rm stats.json && webpack --profile --json > stats.json && webpack-bundle-analyzer stats.json",
    "eslint": "eslint ./src",
    "tslint": "tslint -c tslint.json --project .",
    "lint": "yarn run eslint && yarn run tslint",
    "build": "yarn run clean && tsc --project tsconfig.build.json && webpack",
    "clean": "rm -rf ./dist",
    "prepublish": "yarn run build",
    "test": "jest --testPathPattern $PWD/test/helpers.test.tsx",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "release": "np"
  },
  "jest": {
    "transform": {
      "^.+\\.[t]sx?$": "ts-jest",
      "\\.jsx?$": "babel-jest",
      ".+\\.(css)$": "<rootDir>/node_modules/jest-css-modules-transform"
    },
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/"
    ],
    "setupFiles": [
      "<rootDir>/test/test-setup.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.[jt]sx?$",
    "testURL": "http://localhost/",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.json"
      }
    }
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "jsxSingleQuote": true,
    "trailingComma": "es5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
