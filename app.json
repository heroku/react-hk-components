{
  "name": "react-hk-components",
  "description": "React components for Heroku's Purple 3",
  "repository": "https://github.com/heroku/react-hk-components",
  "env": {
    "NPM_CONFIG_PRODUCTION": {
      "description": "Ensure node buildpack leaves dev deps for Storybook",
      "value": "false"
    }
  },
  "environments": {
    "test": {
      "scripts": {
        "test": "yarn run test && yarn run lint"
      }
    }
  },
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    },
    {
      "url": "https://github.com/heroku/heroku-buildpack-static"
    }
  ]
}
